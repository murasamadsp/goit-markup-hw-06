/* #region Global */

body {
  /* Box model */
  margin: 0;

  /* Typography */
  font-family: var(--ff-base);
  font-size: 16px;
  line-height: 1.5;
  color: var(--color-slate);

  /* Visual */
  background-color: var(--color-white);
}

:root {
  /* Colors */
  --color-white: #fff;
  --color-navy-blue: #2e2f42;
  --color-slate: #434455;
  --color-light-slate: #8e8f99;
  --color-iris: #4d5ae5;
  --color-ocean: #404bbf;
  --color-cornflower: #e7e9fc;
  --color-cloud: #f4f4fd;
  --color-green: #31d0aa;
  --color-modal-bg: #fcfcfc;
  --overlay-bg: rgb(46 47 66 / 0.4);
  --hero-overlay: rgb(46 47 66 / 0.7);

  /* Typography */
  --ff-base: 'Roboto', sans-serif;
  --ff-accent: 'Raleway', sans-serif;
  --fw-regular: 400;
  --fw-medium: 500;
  --fw-bold: 700;
  --ls-s: 0.02em;
  --ls-m: 0.03em;
  --ls-l: 0.04em;

  /* Layout */
  --container-max-width: 1158px;
  --container-padding-inline: 15px;
  --section-padding-y: 120px;
  --hero-padding-y: 188px;
  --radius-s: 4px;
  --radius-round: 50%;

  /* Shadows */
  --shadow-small: 0 1px 6px rgb(46 47 66 / 0.08), 0 1px 1px rgb(46 47 66 / 0.16),
    0 2px 1px rgb(46 47 66 / 0.08);
  --shadow-modal: 0 1px 1px rgb(0 0 0 / 0.14), 0 2px 1px rgb(0 0 0 / 0.2),
    0 1px 3px rgb(0 0 0 / 0.12);
  --shadow-btn: 0 4px 4px rgb(0 0 0 / 0.15);

  /* Transitions */
  --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);

  /* Aliases */
  --title-color: var(--color-navy-blue);
}

ul {
  /* Box model */
  margin: 0;
  padding: 0;

  /* Visual */
  list-style: none;
}

a {
  /* Typography */
  text-decoration: none;
}

h1,
h2,
h3,
h4,
h5,
h6,
p {
  /* Box model */
  margin: 0;
}

img {
  /* Box model */
  max-width: 100%;
  height: auto;
}

.container {
  /* Box model */
  max-width: 320px;
  margin: 0 auto;
  padding-inline: 16px;
}

.section {
  /* Box model */
  padding-block: 96px;
}

.visually-hidden {
  /* Positioning */
  position: absolute;

  /* Box model */
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;

  /* Typography */
  white-space: nowrap;

  /* Visual */
  border: 0;
  clip-path: inset(100%);
  clip: rect(0 0 0 0);
  overflow: hidden;
}

/* #endregion Global */

/* #region - Header - */

/* #region Navigation */
.header {
  /* Visual */
  box-shadow: 0 2px 1px rgb(46 47 66 / 0.08), 0 1px 1px rgb(46 47 66 / 0.16),
    0 1px 6px rgb(46 47 66 / 0.08);
}

.header-container {
  /* Positioning */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav {
  /* Positioning */
  display: flex;
  align-items: center;
}

.nav-logo {
  /* Box model */
  padding: 16px 0;

  /* Typography */
  color: var(--color-iris);
  font-family: var(--ff-accent);
  font-size: 18px;
  font-weight: var(--fw-bold);
  letter-spacing: var(--ls-m);
  line-height: 1.17;
  text-transform: uppercase;
}

.nav-logo-accent {
  /* Typography */
  color: var(--color-navy-blue);
}

.nav-list {
  /* Positioning */
  display: none;
}

.nav-link--current {
  /* Positioning */
  position: relative;

  /* Typography */
  color: var(--color-ocean);
}

.nav-link--current::after {
  /* Positioning */
  position: absolute;
  bottom: -1px;
  left: 0;

  /* Box model */
  width: 100%;
  height: 4px;
  content: '';

  /* Visual */
  background-color: var(--color-ocean);
  border-radius: 2px;
}

.nav-link {
  /* Box model */
  padding: 24px 0;

  /* Typography */
  color: var(--color-navy-blue);
  font-size: 16px;
  font-weight: var(--fw-medium);

  /* Misc */
  transition: color var(--transition-base);
}

.nav-link:hover,
.nav-link:focus-visible {
  /* Typography */
  color: var(--color-ocean);
}

.nav-link--current:hover::after,
.nav-link--current:focus-visible::after {
  /* Misc */
  transform: scaleX(1);
}

/* #endregion Navigation */

/* #region Contacts */
.contacts {
  /* Typography */
  font-style: normal;

  /* Positioning */
  display: none;
}

.contacts-list {
  /* Box model */
  display: flex;
  gap: 40px;
}

.contacts-link {
  /* Typography */
  color: var(--color-slate);

  /* Misc */
  transition: color var(--transition-base);
}

.contacts-link:hover,
.contacts-link:focus-visible {
  /* Typography */
  color: var(--color-ocean);
}
/* #endregion Contacts */

/* #endregion Header */

/* #region - Main - */

/* #region Hero */

.hero {
  /* Box model */
  margin: 0 auto;
  padding: 72px 0;

  /* Typography */
  text-align: center;

  /* Visual */
  background-color: var(--color-navy-blue);
  background-image: linear-gradient(var(--hero-overlay), var(--hero-overlay)),
    url(../images/hero/hero-background.jpg);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.hero-title {
  /* Box model */
  max-width: 320px;
  margin: 0 auto 72px auto;

  /* Typography */
  color: var(--color-white);
  font-weight: 700;
  font-size: 36px;
  line-height: 1.11;
  letter-spacing: var(--ls-s);
}

.hero-button {
  /* Box model */
  min-width: 169px;
  height: 56px;
  margin: 0 auto;
  border: none;
  border-radius: var(--radius-s);

  /* Typography */
  color: var(--color-white);
  font-weight: var(--fw-medium);
  letter-spacing: var(--ls-l);

  /* Visual */
  background-color: var(--color-iris);
  cursor: pointer;

  /* Misc */
  transition: background-color var(--transition-base);
}

.hero-button:hover,
.hero-button:active {
  /* Visual */
  background-color: var(--color-ocean);
}

.hero-button:focus-visible {
  /* Visual */
  outline: 2px solid var(--color-ocean);
  outline-offset: 2px;
}
/* #endregion Hero */

/* #region Benefits */

.benefits-list {
  /* Positioning */
  display: flex;
  flex-direction: column;
  gap: 72px;
}

.benefits-item {
  /* Box model */
  flex-basis: 100%;
}

.benefits-subtitle {
  /* Box model */
  margin-bottom: 8px;

  /* Typography */
  color: var(--color-navy-blue);
  font-weight: 700;
  font-size: 36px;
  line-height: 1.11;
  text-align: center;
}

.benefits-description {
  /* Typography */
  font-weight: var(--fw-medium);
  font-size: 16px;
  line-height: 1.5;
  text-align: center;
}

.benefits-icon-container {
  /* Positioning */
  display: none;
}

.benefits-icon {
  /* Visual */
  fill: var(--color-navy-blue);
}

/* #endregion Benefits */

/* #region Team */

.team {
  /* Typography */
  text-transform: capitalize;

  /* Visual */
  background-color: var(--color-cloud);
}

.team-heading {
  /* Box model */
  margin-bottom: 72px;

  /* Typography */
  color: var(--color-navy-blue);
  font-weight: 700;
  font-size: 36px;
  line-height: 1.11;
  letter-spacing: var(--ls-m);
  text-align: center;
}

.team-position {
  /* Box model */
  margin-bottom: 8px;
}

.team-list {
  /* Positioning */
  display: flex;
  flex-direction: column;
  gap: 72px;
}

.team-item {
  /* Visual */
  background-color: var(--color-white);
  border-radius: 0 0 var(--radius-s) var(--radius-s);
  box-shadow: var(--shadow-small);

  /* Misc */
  transition: box-shadow var(--transition-base);
}

.team-info {
  /* Box model */
  padding: 32px 0;

  /* Typography */
  text-align: center;
}

.team-name {
  /* Box model */
  margin-bottom: 8px;

  /* Typography */
  color: var(--color-navy-blue);
  font-weight: 500;
  font-size: 20px;
  line-height: 1.2;
}

.team-social-list {
  /* Positioning */
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24px;
}

.team-social-item {
  /* Positioning */
  display: flex;
}

.team-social-link {
  /* Box model */
  display: flex;
  width: 40px;
  height: 40px;
  justify-content: center;
  align-items: center;

  /* Visual */
  border-radius: var(--radius-round);
  background-color: var(--color-iris);

  /* Misc */
  transition: background-color var(--transition-base);
}

.team-social-link:hover,
.team-social-link:focus {
  /* Visual */
  background-color: var(--color-ocean);
}

.team-social-icon {
  /* Box model */
  width: 16px;
  height: 16px;

  /* Visual */
  fill: var(--color-cloud);
}

/* #endregion Team */

/* #region Portfolio */

.portfolio-heading {
  /* Box model */
  margin-bottom: 72px;

  /* Typography */
  color: var(--color-navy-blue);
  font-weight: 700;
  font-size: 36px;
  line-height: 1.11;
  letter-spacing: var(--ls-m);
  text-align: center;
  text-transform: capitalize;
}

.portfolio-list {
  /* Positioning */
  display: flex;
  flex-direction: column;
  gap: 48px;
}

.portfolio-overlay-container {
  /* Positioning */
  position: relative;

  /* Box model */
  overflow: hidden;
}

.portfolio-overlay-text {
  /* Positioning */
  position: absolute;
  top: 0;

  /* Box model */
  width: 100%;
  height: 100%;
  padding: 40px 32px;

  /* Typography */
  color: var(--color-cloud);
  letter-spacing: var(--ls-s);

  /* Visual */
  background-color: var(--color-iris);

  /* Misc */
  transform: translateY(100%);
  transition: transform var(--transition-base);
}

.portfolio-info {
  /* Box model */
  padding: 32px 16px;

  /* Visual */
  border-bottom: 1px solid var(--color-cornflower);
  border-left: 1px solid var(--color-cornflower);
  border-right: 1px solid var(--color-cornflower);
}

.portfolio-name {
  /* Box model */
  margin-bottom: 8px;

  /* Typography */
  color: var(--color-navy-blue);
  font-weight: 500;
  font-size: 20px;
  line-height: 1.2;
}

.portfolio-item {
  /* Misc */
  transition: box-shadow var(--transition-base);
}

.portfolio-item:hover,
.portfolio-item:focus {
  /* Visual */
  box-shadow: var(--shadow-small);
}

.portfolio-item:hover .portfolio-overlay-text {
  /* Misc */
  transform: translateY(0%);
}

/* #endregion Portfolio */

/* #endregion Main */

/* #region - Footer - */

footer .container {
  /* Positioning */
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 72px;
}

.footer {
  /* Box model */
  padding: 96px 0;

  /* Visual */
  background-color: var(--color-navy-blue);
}

.footer-logo {
  /* Box model */
  display: inline-block;
  margin-bottom: 16px;

  /* Typography */
  color: var(--color-iris);
  font-family: var(--ff-accent);
  font-weight: var(--fw-bold);
  font-size: 18px;
  line-height: 1.17;
  letter-spacing: var(--ls-m);
  text-transform: uppercase;
}

.footer-logo-accent {
  /* Typography */
  color: var(--color-cloud);
}

.footer-desc {
  /* Box model */
  max-width: 264px;

  /* Typography */
  color: var(--color-cloud);
  font-size: 16px;
  text-align: center;
}

.footer-social-wrapper {
  /* Box model */
  margin-right: 0;
}

.footer-social-title {
  /* Box model */
  margin-bottom: 16px;

  /* Typography */
  color: var(--color-white);
  font-weight: var(--fw-medium);
  letter-spacing: var(--ls-s);
  text-align: center;
}

.footer-social-list {
  /* Positioning */
  display: flex;
  justify-content: center;
  gap: 16px;
}

.footer-social-item {
  /* Positioning */
  display: flex;
}

.footer-info-wrapper {
  /* Box model */
  margin-right: 0;
}

.footer-social-link {
  /* Box model */
  display: flex;
  width: 40px;
  height: 40px;
  justify-content: center;
  align-items: center;

  /* Visual */
  border-radius: var(--radius-round);
  background-color: var(--color-iris);

  /* Misc */
  transition: background-color var(--transition-base);
}

.footer-social-link:hover,
.footer-social-link:focus {
  /* Visual */
  background-color: var(--color-green);
}

.footer-social-icon {
  /* Box model */
  width: 24px;
  height: 24px;

  /* Visual */
  fill: var(--color-cloud);
}

.footer-icon-list {
  /* Positioning */
  display: flex;
  gap: 24px;
}

.footer-icon {
  /* Visual */
  fill: var(--color-cloud);
}

/* #region Footer Form */
.footer-form-wrapper {
  /* Positioning */
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.footer-form-title {
  /* Box model */
  margin-bottom: 16px;

  /* Typography */
  color: var(--color-white);
  font-weight: var(--fw-medium);
  font-size: 16px;
  line-height: 1.5;
  letter-spacing: var(--ls-s);
  text-align: center;
}

.footer-form {
  /* Positioning */
  display: flex;
  flex-direction: column;
  gap: 16px;
  width: 100%;
}

.footer-form-label {
  /* Positioning */
  display: flex;
  flex-direction: column;
}

.footer-form-input {
  /* Box model */
  width: 100%;
  height: 40px;
  padding-left: 16px;

  /* Typography */
  color: var(--color-white);
  font-size: 12px;
  line-height: 2;
  letter-spacing: var(--ls-l);

  /* Visual */
  border: 1px solid var(--color-white);
  border-radius: var(--radius-s);
  background-color: transparent;
  box-shadow: var(--shadow-btn);
  outline: none;

  /* Misc */
  transition: border-color var(--transition-base);
}

.footer-form-input::placeholder {
  /* Typography */
  color: var(--color-white);
}

.footer-form-input:hover,
.footer-form-input:focus {
  /* Visual */
  border-color: var(--color-iris);
}

.footer-form-button {
  /* Positioning */
  display: flex;
  justify-content: center;
  align-items: center;

  /* Box model */
  min-width: 165px;
  height: 40px;
  margin: 0 auto;

  /* Typography */
  color: var(--color-white);
  font-family: var(--ff-base);
  font-size: 16px;
  font-weight: var(--fw-medium);
  line-height: 1.5;
  letter-spacing: var(--ls-l);

  /* Visual */
  border: none;
  border-radius: var(--radius-s);
  background-color: var(--color-iris);
  cursor: pointer;

  /* Misc */
  transition: background-color var(--transition-base);
}

.footer-form-button:hover,
.footer-form-button:focus {
  /* Visual */
  background-color: var(--color-ocean);
}

.footer-form-button:focus-visible {
  /* Visual */
  outline: 2px solid var(--color-ocean);
  outline-offset: 2px;
}

.footer-form-icon {
  /* Box model */
  margin-left: 16px;
  width: 24px;
  height: 24px;

  /* Visual */
  fill: var(--color-white);
}

/* #endregion Footer Form */

/* #endregion Footer */

/* #region Modal */
.modal-overlay {
  /* Positioning */
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;

  /* Box model */
  width: 100%;
  height: 100%;

  /* Positioning */
  display: flex;
  justify-content: center;
  align-items: center;

  /* Visual */
  background-color: rgb(46 47 66 / 0.4);

  /* Misc */
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: opacity 250ms cubic-bezier(0.4, 0, 0.2, 1),
    visibility 250ms cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-overlay.is-open {
  /* Misc */
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

.modal {
  /* Positioning */
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

  /* Box model */
  width: calc(100% - 32px);
  max-width: 392px;
  min-height: 584px;
  padding: 72px 16px 24px 16px;

  /* Visual */
  background: var(--color-modal-bg);
  border-radius: var(--radius-s);
  box-shadow: 0 1px 1px rgb(0 0 0 / 0.14), 0 1px 3px rgb(0 0 0 / 0.12),
    0 2px 1px rgb(0 0 0 / 0.2);

  /* Misc */
  transition: transform 250ms cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-title {
  /* Box model */
  margin-bottom: 16px;

  /* Typography */
  color: var(--color-navy-blue);
  font-weight: var(--fw-medium);
  font-size: 16px;
  line-height: 1.5;
  text-align: center;
}

.modal-text {
  /* Box model */
  margin-bottom: 16px;

  /* Typography */
  font-weight: 500;
  font-size: 16px;
  line-height: 1.5;
  text-align: center;
  letter-spacing: 0.02em;
  color: var(--color-navy-blue);
}

.modal-field {
  /* Positioning */
  display: flex;
  flex-direction: column;
  margin-bottom: 8px;
}

.modal-form .modal-field:nth-of-type(4) {
  /* Box model */
  margin-bottom: 16px;
}

.modal-label {
  /* Typography */
  color: var(--color-light-slate);
  font-size: 12px;
  line-height: 1.17;
  letter-spacing: var(--ls-l);
  margin-bottom: 4px;
}

.modal-input-wrapper {
  /* Positioning */
  position: relative;
}

.modal-input {
  /* Box model */
  width: 100%;
  height: 40px;
  padding: 8px 16px 8px 38px;

  /* Typography */
  color: var(--color-navy-blue);
  font-size: 12px;
  line-height: 1.17;
  letter-spacing: var(--ls-l);

  /* Visual */
  border: 1px solid rgb(46 47 66 / 0.4);
  border-radius: var(--radius-s);
  background-color: transparent;
  outline: transparent;

  /* Misc */
  transition: border-color var(--transition-base);
}

.modal-input:focus {
  /* Visual */
  border-color: var(--color-iris);
}

.modal-textarea {
  /* Box model */
  width: 100%;
  height: 120px;
  padding: 8px 16px;
  resize: none;

  /* Typography */
  color: rgb(46 47 66 / 0.4);
  font-size: 12px;
  line-height: 1.17;
  letter-spacing: var(--ls-l);

  /* Visual */
  border: 1px solid rgb(46 47 66 / 0.4);
  border-radius: var(--radius-s);
  background-color: transparent;
  outline: transparent;

  /* Misc */
  transition: border-color var(--transition-base);
}

.modal-textarea:focus {
  /* Visual */
  border-color: var(--color-iris);
}

.modal-input-icon {
  /* Positioning */
  position: absolute;
  top: 50%;
  left: 16px;
  z-index: 2;
  transform: translateY(-50%);

  /* Box model */
  width: 18px;
  height: 24px;

  /* Visual */
  fill: var(--color-navy-blue);

  /* Misc */
  pointer-events: none;
  transition: fill 250ms cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-input:focus + .modal-input-icon {
  /* Visual */
  fill: var(--color-iris);
}

.modal-close-button {
  /* Positioning */
  position: absolute;
  top: 24px;
  right: 24px;
  display: flex;
  justify-content: center;
  align-items: center;

  /* Box model */
  width: 24px;
  height: 24px;
  padding: 0;

  /* Visual */
  border: 1px solid rgb(0 0 0 / 0.1);
  border-radius: var(--radius-round);
  background-color: var(--color-cornflower);

  /* Misc */
  cursor: pointer;
  transition: background-color 250ms cubic-bezier(0.4, 0, 0.2, 1),
    border 250ms cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-close-button:hover,
.modal-close-button:focus {
  /* Visual */
  background-color: var(--color-ocean);
  border: none;
}

.modal-close-button:hover .modal-close-icon,
.modal-close-button:focus .modal-close-icon,
.modal-close-button:focus-visible .modal-close-icon {
  /* Visual */
  fill: var(--color-white);
}

.modal-close-button:focus-visible {
  /* Visual */
  outline: 2px solid var(--color-ocean);
  outline-offset: 2px;
  border: none;
}

.modal-close-icon {
  /* Box model */
  width: 8px;
  height: 8px;
  margin: 0;

  /* Misc */
  pointer-events: none;
  transition: fill var(--transition-base);
  fill: var(--color-navy-blue);
}

.modal-button {
  /* Box model */
  min-width: 169px;
  height: 56px;
  margin: 0 auto;

  /* Typography */
  color: var(--color-white);
  font-family: 'Roboto', sans-serif;
  font-size: 16px;
  font-weight: 500;
  line-height: 1.5;
  letter-spacing: 0.04em;

  /* Visual */
  border: none;
  border-radius: var(--radius-s);
  background-color: var(--color-iris);
  box-shadow: var(--shadow-btn);
  cursor: pointer;

  /* Misc */
  transition: background-color 250ms cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-button-wrapper {
  /* Positioning */
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 10px;
  padding: 16px 32px;
}

.modal-button:hover,
.modal-button:focus {
  /* Visual */
  background-color: var(--color-ocean);
}

.modal-button:focus-visible {
  /* Visual */
  outline: 2px solid var(--color-ocean);
  outline-offset: 2px;
}

.modal-checkbox-wrapper {
  /* Positioning */
  display: flex;
  align-items: flex-start;
  gap: 8px;
  margin-bottom: 24px;
}

.modal-checkbox-wrapper .modal-checkbox {
  /* Positioning */
  position: absolute;

  /* Misc */
  opacity: 0;
  pointer-events: none;
}

.modal-checkbox-indicator {
  /* Box model */
  display: inline-flex;
  width: 16px;
  height: 16px;

  /* Positioning */
  align-items: center;
  justify-content: center;

  /* Visual */
  border: 1px solid rgb(46 47 66 / 0.4);
  border-radius: 2px;
  fill: transparent;

  /* Misc */
  flex-shrink: 0;
  margin-right: 8px;
  transition: background-color 250ms cubic-bezier(0.4, 0, 0.2, 1),
    border 250ms cubic-bezier(0.4, 0, 0.2, 1),
    fill 250ms cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-checkbox-mark {
  /* Visual */
  fill: transparent;

  /* Misc */
  transition: fill 250ms cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-checkbox:checked + .modal-privacy-label > .modal-checkbox-indicator {
  /* Visual */
  background-color: var(--color-ocean);
  border: none;
  fill: var(--color-cloud);
}

.modal-checkbox:checked
  + .modal-privacy-label
  > .modal-checkbox-indicator
  > .modal-checkbox-mark {
  /* Visual */
  fill: var(--color-cloud);
}

.modal-checkbox {
  /* Box model */
  width: 16px;
  height: 16px;
}

.modal-privacy-label {
  /* Typography */
  color: var(--color-light-slate);
  font-size: 12px;
  font-weight: var(--fw-regular);
  line-height: 1.17;
  letter-spacing: var(--ls-l);

  /* Misc */
  cursor: pointer;
  transition: color var(--transition-base);
}

.modal-privacy-label .modal-privacy-link {
  /* Typography */
  color: var(--color-iris);
  text-decoration: underline;

  /* Misc */
  transition: color var(--transition-base);
}

.modal-privacy-label .modal-privacy-link:hover,
.modal-privacy-label .modal-privacy-link:focus {
  /* Typography */
  color: var(--color-ocean);
}

/* #endregion Modal */

/* #region Mobile Menu */

.mobile-menu-button {
  /* Positioning */
  display: block;

  /* Box model */
  padding: 0;
  border: none;
  background: transparent;

  /* Visual */
  cursor: pointer;
}

.mobile-menu-icon {
  /* Visual */
  fill: var(--color-navy-blue);
  transition: fill var(--transition-base);
}

.mobile-menu-button:hover .mobile-menu-icon,
.mobile-menu-button:focus .mobile-menu-icon {
  /* Visual */
  fill: var(--color-ocean);
}

.mobile-menu {
  /* Positioning */
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;

  /* Box model */
  width: 100vw;
  height: 100vh;
  padding: 80px 40px 40px 40px;

  /* Positioning */
  display: flex;
  flex-direction: column;

  /* Visual */
  background-color: var(--color-white);

  /* Misc */
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transform: translateX(100%);
  transition: opacity var(--transition-base), visibility var(--transition-base),
    transform var(--transition-base);
}

.mobile-menu.is-open {
  /* Misc */
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
  transform: translateX(0);
}

.mobile-menu-btn {
  /* Positioning */
  position: absolute;
  top: 24px;
  right: 24px;
  display: flex;
  align-items: center;
  justify-content: center;

  /* Box model */
  width: 24px;
  height: 24px;
  padding: 0;
  border: 1px solid rgb(46 47 66 / 0.1);
  border-radius: var(--radius-round);
  background: transparent;

  /* Visual */
  cursor: pointer;
  transition: background-color var(--transition-base),
    border-color var(--transition-base);
}

.mobile-menu-btn:hover,
.mobile-menu-btn:focus {
  /* Visual */
  background-color: var(--color-cornflower);
  border-color: var(--color-ocean);
}

.mobile-menu-btn-icon {
  /* Visual */
  fill: var(--color-navy-blue);
  transition: fill var(--transition-base);
}

.mobile-menu-btn:hover .mobile-menu-btn-icon,
.mobile-menu-btn:focus .mobile-menu-btn-icon {
  /* Visual */
  fill: var(--color-ocean);
}

.mobile-menu-nav {
  /* Box model */
  margin-bottom: 40px;
}

.mobile-menu-item {
  /* Box model */
  margin-bottom: 40px;
}

.mobile-menu-item:last-child {
  /* Box model */
  margin-bottom: 0;
}

.mobile-menu-link {
  /* Typography */
  color: var(--color-navy-blue);
  font-weight: var(--fw-medium);
  font-size: 36px;
  line-height: 1.11;
  letter-spacing: var(--ls-m);

  /* Misc */
  transition: color var(--transition-base);
}

.mobile-menu-link:hover,
.mobile-menu-link:focus {
  /* Typography */
  color: var(--color-ocean);
}

.mobile-menu-contacts {
  /* Box model */
  margin-bottom: 48px;
}

.mobile-menu-contacts .mobile-menu-link {
  /* Typography */
  color: var(--color-slate);
  font-weight: var(--fw-medium);
  font-size: 20px;
  line-height: 1.2;
  letter-spacing: var(--ls-m);
}

.mobile-menu-contacts .mobile-menu-link[href^='tel:'] {
  /* Typography */
  color: var(--color-iris);
  font-size: 36px;
  line-height: 1.11;
}

.mobile-menu-social {
  /* Positioning */
  display: flex;
  gap: 56px;

  /* Box model */
  margin-top: auto;
}

.mobile-menu-social-item {
  /* Positioning */
  display: flex;
}

.mobile-menu-social-link {
  /* Positioning */
  display: flex;
  align-items: center;
  justify-content: center;

  /* Box model */
  width: 40px;
  height: 40px;

  /* Visual */
  border-radius: var(--radius-round);
  background-color: var(--color-iris);

  /* Misc */
  transition: background-color var(--transition-base);
}

.mobile-menu-social-link:hover,
.mobile-menu-social-link:focus {
  /* Visual */
  background-color: var(--color-ocean);
}

.mobile-menu-social-icon {
  /* Visual */
  fill: var(--color-cloud);
}

/* #endregion Mobile Menu */

/* #region Media Queries */

/* Tablet */
@media screen and (min-width: 768px) {
  .container {
    /* Box model */
    max-width: 768px;
    padding-inline: 16px;
  }

  .mobile-menu-button {
    /* Positioning */
    display: none;
  }

  .mobile-menu {
    /* Positioning */
    display: none;
  }

  .nav-list {
    /* Positioning */
    display: flex;
    gap: 40px;
  }

  .contacts {
    /* Positioning */
    display: flex;
  }

  .header-container {
    /* Box model */
    gap: 120px;
  }

  .nav-logo {
    /* Box model */
    margin-right: 120px;
    padding: 24px 0;
  }

  .contacts-list {
    /* Box model */
    flex-direction: column;
    gap: 12px;
  }

  .contacts-link {
    /* Typography */
    font-size: 12px;
    line-height: 1.17;
    letter-spacing: var(--ls-l);
  }

  .hero {
    /* Box model */
    padding: 112px 0;
  }

  .hero-title {
    /* Typography */
    font-size: 56px;
    line-height: 1.07;
    max-width: 496px;
    margin-bottom: 36px;
  }

  .benefits-list {
    /* Positioning */
    flex-wrap: wrap;
    gap: 72px 24px;
  }

  .benefits-item {
    /* Box model */
    flex-basis: calc((100% - 24px) / 2);
  }

  .benefits-icon-container {
    /* Positioning */
    display: flex;
    justify-content: center;
    align-items: center;

    /* Box model */
    height: 112px;
    margin-bottom: 8px;

    /* Visual */
    border: 1px solid var(--color-light-slate);
    border-radius: var(--radius-s);
    background-color: var(--color-cloud);
  }

  .benefits-subtitle {
    /* Typography */
    font-weight: 500;
    font-size: 20px;
    line-height: 1.2;
    text-align: left;
  }

  .benefits-description {
    /* Typography */
    font-weight: 400;
    font-size: 16px;
    text-align: left;
  }

  .team-list {
    /* Positioning */
    flex-wrap: wrap;
    justify-content: center;
    gap: 64px 24px;
  }

  .team-item {
    /* Box model */
    flex-basis: calc((100% - 24px) / 2);
  }

  .portfolio-list {
    /* Positioning */
    flex-wrap: wrap;
    justify-content: space-between;
    row-gap: 72px;
    column-gap: 24px;
  }

  .portfolio-item {
    /* Box model */
    flex-basis: calc((100% - 24px) / 2);
  }

  footer .container {
    /* Positioning */
    flex-direction: row;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: 72px 24px;
    padding-inline: 108px;
  }

  .footer-desc {
    /* Typography */
    text-align: left;
  }

  .footer-social-wrapper {
    /* Box model */
    margin-right: 0;
  }

  .footer-social-title {
    /* Typography */
    text-align: left;
  }

  .footer-form-wrapper {
    /* Positioning */
    align-items: flex-start;
    width: 100%;
  }

  .footer-form-title {
    /* Typography */
    text-align: left;
  }

  .footer-form {
    /* Positioning */
    flex-direction: row;
    gap: 24px;
    width: auto;
  }

  .footer-form-input {
    /* Box model */
    width: 264px;
  }

  .footer-form-button {
    /* Box model */
    margin: 0;
  }

  .modal {
    /* Box model */
    width: 408px;
    max-width: 408px;
    padding: 72px 24px 24px 24px;
  }

  .modal-input {
    /* Box model */
    padding-left: 38px;
  }
}

/* Desktop */
@media screen and (min-width: 1158px) {
  .container {
    /* Box model */
    max-width: 1158px;
    padding-inline: 15px;
  }

  .section {
    /* Box model */
    padding-block: var(--section-padding-y);
  }

  .header-container {
    /* Box model */
    gap: 72px;
  }

  .nav-logo {
    /* Box model */
    margin-right: 76px;
  }

  .contacts-list {
    /* Box model */
    flex-direction: row;
    gap: 40px;
  }

  .contacts-link {
    /* Box model */
    padding: 24px 0;

    /* Typography */
    font-size: 16px;
    line-height: 1.5;
    letter-spacing: var(--ls-m);
  }

  .hero {
    /* Box model */
    padding: var(--hero-padding-y) 0;
    max-width: 1440px;
  }

  .hero-title {
    /* Box model */
    margin-bottom: 48px;
  }

  .benefits-list {
    /* Box model */
    gap: 24px;
  }

  .benefits-item {
    /* Box model */
    flex-basis: calc((100% - 72px) / 4);
  }

  .team {
    /* Box model */
    padding-block: var(--section-padding-y);
  }

  .team-list {
    /* Box model */
    gap: 24px;
  }

  .team-item {
    /* Box model */
    flex-basis: calc((100% - 72px) / 4);
  }

  .portfolio-list {
    /* Box model */
    row-gap: 48px;
  }

  .portfolio-item {
    /* Box model */
    flex-basis: calc((100% - 48px) / 3);
  }

  .footer {
    /* Box model */
    padding: 100px 0;
  }

  footer .container {
    /* Positioning */
    flex-wrap: nowrap;
    align-items: baseline;
    gap: 0;
    padding-inline: 15px;
  }

  .footer-info-wrapper {
    /* Box model */
    margin-right: 120px;
  }

  .footer-social-wrapper {
    /* Box model */
    margin-right: 80px;
  }

  .footer-form-wrapper {
    /* Positioning */
    align-items: flex-start;
    width: auto;
  }

  .footer-form {
    /* Positioning */
    margin-left: auto;
  }
}

/* Retina displays */
@media (min-resolution: 192dpi) {
  .hero {
    /* Visual */
    background-image: linear-gradient(var(--hero-overlay), var(--hero-overlay)),
      url(../images/hero/hero-background@2x.jpg);
  }
}

/* #endregion Media Queries */
